{
  "name": "@tachybase/sheet-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -C packages/demo dev",
    "test": "pnpm -C packages/sheet test",
    "format": "biome check --write .",
    "check": "biome check .",
    "doc:build": "rspress build",
    "doc:dev": "rspress dev",
    "doc:preview": "rspress preview",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,json,sql,ts,tsx}": [
      "biome check --write",
      "biome format --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.7",
    "lint-staged": "15.2.11",
    "rspress": "^1.38.0",
    "typescript": "^5.6.3"
  }
}
